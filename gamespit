from configobj import ConfigObj
import imp
import sys
import os

sys.path.append("./lib")
sys.path.append("./games") 

import Gui
import Controls

# Load a module or plugin dinamically
def load_game(name, game_conf, display, controller):

        print "Loading game:", name 
        game_conf=ConfigObj(game_conf)

        fp, pathname, description = imp.find_module(name)
        try:
          module=imp.load_module(name, fp, pathname, description)
          result=module.main(game_conf, display, controller) 
        except Exception as e:
          print "ERROR", e
          result="ERROR"
        finally:
          if fp:
            fp.close()
        return result

# Main
def main():
# Load main config file
    CONF = ConfigObj("gamespit.conf")

# Create a Graphic User Interface
    display = Gui.Display(CONF["DISPLAY"])

# Create a Controller (keyboard, joystick..)
    controller = Controls.Control(CONF["CONTROL"])

    while True:
# Load the main menu (main menu is a game itself)
        game_conf=os.path.join(CONF["base_path"], "menu", "game.conf")
        new_game=load_game("menu", game_conf, display, controller)

# Load selected game
        if new_game:
            game_conf=os.path.join(CONF["base_path"], new_game, "game.conf")
            new_game=load_game(new_game, game_conf, display, controller)


if __name__ == '__main__':
  main()
 
